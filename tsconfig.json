{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "module": "esnext", 
    "moduleResolution": "node", 
    "sourceMap": true,
    "types": ["jest"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "**/*.ts"],
  "exclude": ["node_modules"]
}